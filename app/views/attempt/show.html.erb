<nav class="navbar navbar-default" role="navigation">
  <div class="navbar-header">
    <a class="navbar-brand">Zona de estudio</a>
  </div>
</nav>
<div class="attempt-show-container">
  <%= form_tag(attempt_check_path, method: :get) do %>
  <div class="row">
    <p class="col-md-offset-2 col-md-7"><%= @attempt.exercise.statement %></p>
  </div>
  <div class="row">
    <div class="col-md-7 col-md-offset-2">
      <%= text_area_tag :user_logic, params[:name] %>
    </div>
    <div class="list-group col-md-2">
      <% @attempt.done_steps.each do |step| %>
        <a class="list-group-item active">
          <span class="glyphicon glyphicon-list-alt"></span>
          <%= step.description %>
        </a>
      <% end %>

      <% @attempt.current_steps.each do |step| %>
        <a class="list-group-item"><span class="glyphicon glyphicon-list-alt" id="step-icon-description"></span><%= step.description %></a>
      <% end %>
    </div>
  </div>
    <%= button_tag(type: "submit", class: "btn btn-info btn-circle btn-xl col-md-offset-9") do %>
      <i class="glyphicon glyphicon-ok"></i>
    <% end %>
    <% end %>
</div>
<hr>
