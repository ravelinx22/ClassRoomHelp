<!DOCTYPE html>
<html>
  <head>
    <title>ClassRoomHelp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!-- Navigation -->
    <div id="menu-toggle" href="#" class="btn btn-dark btn-lg toggle">
      <i class="fa fa-bars"></i>
    </div>
    <nav id="sidebar-wrapper">
      <ul class="sidebar-nav">
        <a id="menu-close" class="btn btn-light btn-lg pull-right toggle">
          <i class="fa fa-times"></i>
        </a>
        <li class="sidebar-brand">
          <a class="js-scroll-trigger" href="#top">Menu</a>
        </li>
        <li>
          <%= link_to "Home", page_index_path , class: "js-scroll-trigger" %>
        </li>
        <%- if !signed_in?%>
          <li>
            <%= link_to "Log In", new_user_session_path , class: "js-scroll-trigger"%>
          </li>
          <li>
            <%= link_to "Sign Up", new_user_registration_path , class: "js-scroll-trigger" %>
          </li>
        <%- else %>
          <li>
            <%= link_to "Start Learning", subject_index_path , class: "js-scroll-trigger"%>
          </li>
          <li>
            <%= link_to "Log Out", destroy_user_session_path , class: "js-scroll-trigger", :method => :delete  %>
          </li>
        <% end -%>
      </ul>
    </nav>

    <%= yield %>
    <!-- Footer -->
    <footer>
      <div class="container">
        <div class="row">
          <div class="col-lg-12 text-center">
            <h4>
              <strong>Start Bootstrap</strong>
            </h4>
            <p>3481 Melrose Place
              <br>Beverly Hills, CA 90210</p>
            <hr class="small">
            <p class="text-muted" id="copyright-text">Copyright &copy; Your Website 2017</p>
          </div>
        </div>
      </div>
    </footer>

  </body>
</html>
